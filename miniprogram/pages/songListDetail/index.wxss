.play_list_bg, .play_list_bg::after {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 420rpx;
}

.play_list_bg {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  -webkit-filter: blur(20px);
  filter: blur(20px);
  -webkit-transform: scale(1.5);
  transform: scale(1.5);
}

.main {
  position: absolute;
  z-index: 2;
  width: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

.main .title_wrap {
  width: 98%;
  display: flex;
  justify-content: space-around;
  padding-top: 50rpx;
}

.main .title_wrap .photo {
  margin-left: 30rpx;
}

.main .title_wrap .photo image {
  width: 260rpx;
  height: 260rpx;
}

.main .title_wrap .content {
  margin-left: 50rpx;
}

.main .title_wrap .content .content_title {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: white;
}

.main .title_wrap .content .content_info {
  padding: 12rpx 0;
  display: flex;
  align-items: center;
}

.main .title_wrap .content .content_info .content_headPictrue image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.main .title_wrap .content .content_info .content_nickname {
  font-size: 30rpx;
  font-weight: 100;
  margin-left: 20rpx;
  color: #f5f5f5;
}

.main .title_wrap .content .content_description {
  font-size: 25rpx;
  line-height: 40rpx;
  color: #eee;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.main .iconMenu_wrap {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
}

.main .iconMenu_wrap .menu_item view {
  text-align: center;
  color: #eee;
}
